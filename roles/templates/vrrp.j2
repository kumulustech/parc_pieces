vrrp_script haproxy-check {
    script "killall -0 haproxy"
    interval 2
    weight 10
}

vrrp_instance openstack-vip {
    state BACKUP
    priority {{ keepalive_priority }}
    interface eth0
    virtual_router_id 47
    advert_int 3

    virtual_ipaddress {
        {{ shared_addr }}
    }

    track_script {
	haproxy-check
    }
}